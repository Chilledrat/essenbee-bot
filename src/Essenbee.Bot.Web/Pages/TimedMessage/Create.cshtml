@page
@model Essenbee.Bot.Web.Pages.TimedMessage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Timed Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimedMessage.Delay" class="control-label"></label>
                <input asp-for="TimedMessage.Delay" class="form-control" />
                <span asp-validation-for="TimedMessage.Delay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimedMessage.Message" class="control-label"></label>
                <input asp-for="TimedMessage.Message" class="form-control" />
                <span asp-validation-for="TimedMessage.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimedMessage.Status" class="control-label"></label>
                <select asp-for="TimedMessage.Status" asp-items="@Model.Statuses" class="form-control"></select>
                <span asp-validation-for="TimedMessage.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Admin">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
